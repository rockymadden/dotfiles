[user]
	name = Rocky Madden
	email = git@rockymadden.com
[credential]
	helper = osxkeychain
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[core]
	filemode = true
	ignorecase = false
	excludesfile = ~/.gitignore
[color]
	ui = auto
[push]
	default = simple
[alias]
	eject = !git reset --hard && git checkout master && git rebase --abort
	summary = !git log $(git log -1 --merges --pretty=format:%H)..HEAD --oneline
	detail = !git log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	co = checkout
	sync = !git pull --rebase --prune $@ && git submodule update --init --recursive
	cob = checkout -b
	cm = !git add -A && git commit -m
	undo = reset HEAD~1 --mixed
	amend = commit -a --amend
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git sync && git bclean ${1-master}; }; f"
